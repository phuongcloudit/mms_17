<%= form_for [:admin, @user] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="tile-body">
    <div class="form-group row">
      <%= f.label t(".name"), class: "control-label col-md-3" %>
      <div class="col-md-8">
        <%= f.text_field :name, class: "form-control", placeholder: t(".enter_fullname") %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label t(".email"), class: "control-label col-md-3" %>
      <div class="col-md-8">
        <%= f.text_field :email, class: "form-control", placeholder: t(".enter_email") %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label t(".password"), class: "control-label col-md-3" %>
      <div class="col-md-8">
        <%= f.password_field :password, class: "form-control", placeholder: t(".enter_pass") %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label t(".pass_conf"), class: "control-label col-md-3" %>
      <div class="col-md-8">
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: t(".enter_pass") %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label t(".birthday"), class: "control-label col-md-3" %>
      <div class="col-md-8">
        <%= f.date_select :birthday, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
    </div>
    <div class="form-group row">
      <label class="control-label col-md-3"><%= t ".avatar" %></label>
      <div class="col-md-8">
        <%= f.file_field :avatar,accept: "image/jpeg,image/gif,image/png", class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label t(".position"), class: "control-label col-md-3" %>
      <div class="col-md-8">
        <%= select("user", "position_id", @positions.collect {|po| [ po.name, po.id ] }, { include_blank: true }, class: "form-control") %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label t(".team"), class: "control-label col-md-3" %>
      <div class="col-md-8">
       <%= select("user", "team_id", @teams.collect {|t| [ t.name, t.id ] }, { include_blank: true }, class: "form-control") %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label t(".project_join"), class: "control-label col-md-3" %>
      <div class="col-md-8">
        <%= select("user", "project_ids", @projects.collect {|p| [ p.name, p.id ] }, {include_hidden: false, include_blank: true }, class: "form-control", multiple: true) %>
      </div>
    </div>
  </div>
  <div class="tile-footer">
    <div class="row">
      <div class="col-md-8 col-md-offset-3">
         <%= f.submit t(".submit"), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
