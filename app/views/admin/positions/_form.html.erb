<%= form_for [:admin, @position] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="col-lg-12">
    <div class="form-group col-md-6">
      <%= f.label t(".name"), class: "control-label" %>
      <%= f.text_field :name, class: "form-control", placeholder: t(".enter_name") %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label t(".short_name"), class: "control-label" %>
      <%= f.text_field :short_name, class: "form-control", placeholder: t(".enter_sname") %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label t(".description"), class: "control-label" %>
      <%= f.text_area :description, class: "form-control", rows: "3" %>
    </div>
    <div class="form-group col-md-6">
      <%= f.submit t(".submit"), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
