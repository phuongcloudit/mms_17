<% provide :title, t(".title") %>
<div class="app-title">
  <div>
    <h1><i class="fa fa-th-list"></i><%= t ".edit_position" %></h1>
  </div>
  <ul class="app-breadcrumb breadcrumb side">
    <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
    <li class="breadcrumb-item"><%= t ".admin" %></li>
    <li class="breadcrumb-item active"><a href="#"><%= t ".edit_position" %></a></li>
  </ul>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="tile">
      <h3 class="tile-title"><%= t ".edit_position" %></h3>
      <div class="tile-body">
        <div class="row">
          <%= form_for [:admin, @position] do |f| %>
            <%= render "shared/error_messages", object: f.object %>
          <div class="col-lg-12">
            <div class="form-group">
              <%= f.label t(".name"), class: "control-label" %>
              <%= f.text_field :name, class: "form-control"%>
            </div>
            <div class="form-group">
              <%= f.label t(".short_name"), class: "control-label" %>
              <%= f.text_field :short_name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label t(".description"), class: "control-label" %>
              <%= f.text_area :description, class: "form-control", rows: "3" %>
            </div>
            <div class="form-group">
              <%= f.submit t(".update"), class: "btn btn-primary" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
