<%= form_for [:admin, @project] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="col-lg-12">
    <div class="form-group col-md-6">
      <%= f.label t(".name"), class: "control-label" %>
      <%= f.text_field :name, class: "form-control", placeholder: t(".enter_name") %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label t(".short_name"), class: "control-label" %>
      <%= f.text_field :short_name, class: "form-control", placeholder: t(".enter_sname") %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label t(".description"), class: "control-label" %>
      <%= f.text_area :description, class: "form-control", rows: "3" %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label t(".start_date"), class: "control-label" %>
      <%= f.date_select :start_date, class: "form-control" %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label t(".end_date"), class: "control-label" %>
      <%= f.date_select :end_date, class: "form-control" %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label t(".leader"), class: "control-label" %>
      <%= select("project", "leader_id", @users.collect {|u| [ u.name, u.id ] }, { include_blank: true },multiple: true, class: "form-control")  %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label t(".team"), class: "control-label" %>
      <%= select("project", "team_id", @teams.collect {|t| [ t.name, t.id ] }, { include_blank: true }, class: "form-control")  %>
    </div>
    <div class="form-group col-md-6">
      <%= f.submit t(".submit"), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
