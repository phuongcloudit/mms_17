<% provide :title, t(".title") %>
<div class="app-title">
  <div>
    <h1><i class="fa fa-th-list"></i><%= t ".edit_team" %></h1>
  </div>
  <ul class="app-breadcrumb breadcrumb side">
    <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
    <li class="breadcrumb-item"><%= t ".admin" %></li>
    <li class="breadcrumb-item active"><a href="#"><%= t ".edit_team" %></a></li>
  </ul>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="tile">
      <h3 class="tile-title"><%= t ".edit_team" %></h3>
      <div class="tile-body">
          <%= form_for [:admin, @team] do |f| %>
            <%= render "shared/error_messages", object: f.object %>
          <div class="col-lg-12">
            <div class="form-group col-md-6">
              <%= f.label t(".name"), class: "control-label" %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group col-md-6">
              <%= f.label t(".description"), class: "control-label" %>
              <%= f.text_area :description, class: "form-control", rows: "3" %>
            </div>
            <div class="form-group col-md-6">
              <%= f.label t(".member"), class: "control-label" %>
              <%= collection_select :team, :user_ids, @users, :id, :name, {},
              {class: "form-control",multiple: true,data: { placeholder: "kk" }} %>
              <button type="button" class="btn btn-info" id="emptymember"><%= t ".empty_member" %></button>
            </div>
            <div class="form-group col-md-6">
              <%= f.label t(".leader"), class: "control-label" %>
              <%= collection_select :team, :leader_id, @users, :id, :name, { include_blank: t("admin.teams.team.choose_leader")}, {class: "form-control"} %>
            </div>
            <div class="form-group col-md-6">
              <%= f.submit t(".add"), class: "btn btn-primary" %>
            </div>
          </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
