 <%= form_for [:admin, @team] do |f| %>
   <%= render "shared/error_messages", object: f.object %>
   <div class="col-lg-12">
    <div class="form-group col-md-6">
      <%= f.label t(".name"), class: "control-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label t(".description"), class: "control-label" %>
      <%= f.text_area :description, class: "form-control", rows: "3" %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label t(".member"), class: "control-label" %><br>
      <%= select("team", "user_ids", @users.collect {|u| [ u.name, u.id ] }, { include_blank: false, include_hidden: false }, class: "form-control", multiple: true) %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label t(".leader"), class: "control-label" %><br>
      <%= select("team", "user_id", @users.collect {|u| [ u.name, u.id ] }, { include_blank: true }, class: "form-control") %>
    </div>
    <div class="form-group col-md-6">
      <%= f.submit t(".submit"), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
