<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <div class="col-md-12">
        <div class="profile">
          <div class="user-info">
            <img class="user-img" src="<%= @user.avatar %>">
            <h4><%= @user.name %></h4>
            Birthday: <%= @user.birthday.strftime("%m/%d/%Y") %><br>
            Email: <%= @user.email %><br>
          </div>
        </div>
      </div>
    </section>
  </aside>
  <div class="col-4">
    <strong>Team join: </strong>
    <p>
      <%= @user.team.name if @user.team %>
    </p>
  </div>
  <div class="col-4">
    <strong>Project join: </strong>
    <p>
      <%= @user.project.name if @user.project %>
    </p>
  </div>

</div>
